                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Motor"
                    android:textColor="#000"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:id="@+id/ilanDetayMotor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="Fiyat "
                    android:textColor="#0F3057"

                    android:textSize="20dp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Yakıt Türü"
                    android:textColor="#000"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:id="@+id/ilanDetayYakitTuru"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="Fiyat "
                    android:textColor="#0F3057"

                    android:textSize="20dp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Ortalama Yakıt "
                    android:textColor="#000"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:id="@+id/İlanDetayOrtalamaYakit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="Fiyat "
                    android:textColor="#0F3057"

                    android:textSize="20dp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Depo Hacmi"
                    android:textColor="#000"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:id="@+id/ilanDetayDepoHacmi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="Fiyat "
                    android:textColor="#0F3057"

                    android:textSize="20dp">

                </TextView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/ilanDetayBaslik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:padding="15dp"
        android:text="İLANLARIN DETAYLARI"
        android:textSize="25dp"
        android:textStyle="bold">

    </TextView>

</RelativeLayout>